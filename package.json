{
  "name": "openmusic-api",
  "version": "3.0.0",
  "description": "",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --config .nodemon/server.json",
    "migrate": "node ./scripts/migrate.js",
    "lint": "eslint --max-warnings 2 --ext .js ./src",
    "format": "prettier -w ./src/**/*",
    "workers": "concurrently -n worker: npm:worker:*",
    "worker:export-playlist": "node src/workers/export-playlist.js"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/jwt": "^3.2.0",
    "amqp-connection-manager": "^4.1.13",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "nanoid": "^3.3.6",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.1",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^42.1.0",
    "@types/amqplib": "^0.10.1",
    "@types/nodemailer": "^6.4.9",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "tsconfig-paths": "^4.2.0"
  }
}
